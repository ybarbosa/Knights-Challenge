generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum AttributeName {
  strength
  dexterity
  constitution
  intelligence
  wisdom
  charisma
}

model Knight {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  nickname String  @unique
  name  String
  birthday DateTime
  keyAttribute String
  weapons   Json
  attributes Json
}

model Weapon {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  mod Int
  attr AttributeName
}
